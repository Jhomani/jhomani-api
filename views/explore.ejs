<script>
  let target = document.querySelectorAll('.end-point-box li');

  for (let el of target) {
    el.onclick = () => {
      let collapse = el.nextElementSibling;

      if (collapse) {
        if (collapse.className.match('collapse'))
          collapse.classList.remove('collapse');
        else
          collapse.classList.add('collapse');
      }

    }
  }
</script>

