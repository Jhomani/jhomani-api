<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/css/bootstrap-grid.min.css">
  <link rel="stylesheet" href="/public/css/index.css">
  <title>Jhomani API</title>
</head>

<body>
  <div class="body-container">
    <div class="welcome-title">
      <h2>Welcome to Jhomani API</h2>
    </div>
    <div class="searcher">
      <input type="text" placeholder="Search by url or controller">
    </div>

    <div class="end-point-box">
      <h3>title</h3>
      <ul>
        <li class="get-method">
          <span class="method">get</span>
          <span class="end_point">/access/count</span>
        </li>
        <div class="get-method detail-endpoint">
          <div>
            <div class="row">
              <div class="col-12 title">
                <h4>Parameters</h4>
              </div>
            </div>
            <hr>
            <div class="row description">
              <div class="col-1 subtitle">
                <span>id</span>
              </div>
              <div class="col-11 data">
                <span>require</span>
                <span>string</span>
                <span>path</span>
              </div>
            </div>
            <div class="row description">
              <div class="col-1 subtitle">
                <span>filter</span>
              </div>
              <div class="col-11 data">
                <span>object</span>
                <span>query</span>
                <textarea readonly rows="6">
{
  data: "juan carlos"
}
                </textarea>
              </div>
            </div>
          </div>
        </div>
        <li class="delete-method">
          <span class="method">Delete</span>
          <span class="end_point">/access/count</span>
        </li>
        <li class="post-method">
          <span class="method">post</span>
          <span class="end_point">/access/count</span>
        </li>
        <li class="patch-method">
          <span class="method">patch</span>
          <span class="end_point">/access/count</span>
        </li>
      </ul>
    </div>

  </div>
</body>
<script>
  let target = document.querySelectorAll('.end-point-box li');

  for (let el of target) {
    el.onclick = () => {
      let collapse = el.nextElementSibling;

      if (collapse.className.match('collapse'))
        collapse.classList.remove('collapse');
      else
        collapse.classList.add('collapse');

    }
  }

  console.log(target)
</script>

</html>